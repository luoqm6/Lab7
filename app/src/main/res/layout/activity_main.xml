<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lab7.MainActivity"
    android:padding="45dp">

    <EditText
        android:id="@+id/key"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="160dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:hint="@string/hint2"
        android:inputType="textPassword">
    </EditText>


    <Button
        android:id="@+id/okBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/SButton1"
        android:textColor="@color/Black1"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/key"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/clearBtn"
        />
    <Button
        android:id="@+id/clearBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/SButton2"
        android:textSize="18sp"
        android:textColor="@color/Black1"
        app:layout_constraintTop_toTopOf="@+id/okBtn"
        app:layout_constraintLeft_toRightOf="@+id/okBtn"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="10dp"
        />
    <Button
        android:id="@+id/resetBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="reset password"
        android:textSize="18sp"
        android:textColor="@color/Black1"
        app:layout_constraintTop_toBottomOf="@+id/okBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/newKey"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="@string/hint1"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:inputType="textPassword">
    </EditText>
</android.support.constraint.ConstraintLayout>

